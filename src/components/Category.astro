---
import { sluglify, cn } from 'src/utils'

const { name = 'View Latest', activeCategory } = Astro.props
const currentPath = Astro.url.pathname
const unsluglifyNameCategory = sluglify(name.toLowerCase())

const isActive =
	activeCategory?.toLocaleLowerCase() === unsluglifyNameCategory ||
	(currentPath === '/' && name === 'View Latest')
---

<a
	href={name === 'View Latest'
		? '/'
		: sluglify(`/category/${unsluglifyNameCategory}/1`)}
	class={cn(
		`text-black dark:text-oatmeal pb-2.5 first-letter:uppercase font-medium hover:text-leaf border-b-4 border-opacity-0 border-leaf hover:border-opacity-100 transition-colors duration-150 ease-linear`,
		isActive &&
			`border-textLeaf text-black z-10 border-b-4 dark:border-leaf dark:text-oatmeal dark:border-opacity-100 border-opacity-100`
	)}
>
	{name}
</a>
