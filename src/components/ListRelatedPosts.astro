---
import type { CollectionEntry } from 'astro:content'

import { Image } from 'astro:assets'
import { cn } from '../utils/cn'

type Props = {
	posts: CollectionEntry<'blog'>[]
}

const { posts } = Astro.props
---

<section class={cn(`flex flex-col md:flex-row sm:justify-between gap-8`)}>
	{
		posts.map((post) => {
			return (
				<div class='flex flex-col items-start w-[200px]'>
					<a class='font-medium  hover:underline' href={`/post/${post.slug}/`}>
						<Image
							src={post.data.heroImage}
							width={200}
							height={200}
							format='webp'
							alt={`Related tea blog: ${post.data.title}`}
						/>
						<header class='flex justify-center items-center text-center'>
							{post.data.title}
						</header>
					</a>
				</div>
			)
		})
	}
</section>
