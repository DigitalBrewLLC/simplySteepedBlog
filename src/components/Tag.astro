---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='bg-textLeaf font-semibold text-white dark:bg-textLeaf dark:text-oatmeal shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
