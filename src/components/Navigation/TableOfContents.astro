---
import TableOfContentsHeading from '@/components/Navigation/TabletOfContentsHeading'

const { headings } = Astro.props

type TableOfContent = {
	depth: number
	text: string
	slug: string
	subheadings: TableOfContent[]
}

const toc = buildToc(headings)
function buildToc(headings: TableOfContent[]) {
	let toc: TableOfContent[] = []
	let parentHeadings = new Map()
	headings.forEach((h) => {
		let heading = { ...h, subheadings: [] }
		parentHeadings.set(heading.depth, heading)
		// Change 2 to 1 if your markdown includes your <h1>
		if (heading.depth > 2) {
			let parentHeading = parentHeadings.get(heading.depth - 1)
			if (parentHeading) {
				parentHeading.subheadings.push(heading)
			} else {
				// Handle the case where the parent heading is missing
				// For example, you might want to log a warning or adjust the heading's depth
				console.warn(`Missing parent heading for depth ${heading.depth}`)
			}
		}
	})
	return toc
}
---

<nav class='max-w-xs dark:text-black'>
	<h1 class='font-bold mb-3 text-2xl dark:text-oatmeal'>Index</h1>
	<ul class='[text-wrap:balance] flex flex-col gap-1'>
		{toc.map((heading) => <TableOfContentsHeading heading={heading} />)}
	</ul>
</nav>
