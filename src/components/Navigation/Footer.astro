---
import { SOCIALNETWORKS } from './Header.astro'

const today = new Date()
---

<footer>
	<div class='sm:block w-full bottom-0 border-b-2 -z-40 border-textLeaf'></div>
	<div
		class='mx-auto max-w-7xl px-6 py-12 md:flex md:items-center md:justify-between lg:px-8'
	>
		<div class='flex space-x-6 md:order-2'>
			{
				SOCIALNETWORKS.map((item) => (
					<a href={item.url}>
						<span class='sr-only'>{item.name}</span>
						<item.icon class='h-6 w-6' aria-hidden='true' />
					</a>
				))
			}
		</div>
		<div class='mt-8 md:order-1 md:mt-0'>
			<p
				class='mt-8 text-s leading-5 text-black dark:text-oatmeal md:order-1 md:mt-0'
			>
				&copy; {today.getFullYear()} Digital Brew LLC. All rights reserved.
			</p>
		</div>
	</div>
</footer>
