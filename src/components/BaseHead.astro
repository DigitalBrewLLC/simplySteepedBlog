---
import { siteConfig } from '@/site-config'
import '../styles/global.css'
import { ViewTransitions } from 'astro:transitions'

export interface Props {
	title?: string
	description?: string
	articleDate?: string | undefined
}

const { title, description = siteConfig.description, articleDate } = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
const socialImageURL = new URL('../public/branding/DarkSimpySteeped', Astro.url).href

const titleSeparator = 'â€¢'

const siteTitle = title ? `${title} ${titleSeparator} ${siteConfig.title}` : `${siteConfig.title}`

import { join } from 'path'
import { AstroFont } from 'astro-font'
---

<!-- ViewTransitions  -->
<ViewTransitions />

<!-- Global Metadata -->
<meta charset='utf-8' />
<meta name='viewport' content='width=device-width,initial-scale=1' />
<link rel='icon' type='favicon' href='../../public/branding/favicon.ico' />
<meta name='generator' content={Astro.generator} />

<!-- Canonical URL -->
<link rel='canonical' href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{siteTitle}</title>

<!-- SEO -->
<meta name='title' content={siteTitle} />
<meta name='description' content={description} />
<meta name='author' content={siteConfig.author} />

<!-- Facebook -->
<meta property='og:type' content={articleDate ? 'article' : 'website'} />
<meta property='og:url' content={Astro.url} />
<meta property='og:title' content={title} />
<meta property='og:description' content={description} />
<meta property='og:image' content={socialImageURL} />
{
	articleDate && (
		<>
			<meta property='article:author' content={siteConfig.author} />
			<meta property='article:published_time' content={articleDate} />
		</>
	)
}

<!-- RSS auto-discovery -->
<link rel='alternate' type='application/rss+xml' title={siteConfig.title} href='/rss.xml' />

<AstroFont
	config={[
		{
			preload: false,
			display: 'swap',
			name: 'Arsenal',
			fallback: 'sans-serif',
			src: [
				{
					weight: '400',
					style: 'normal',
					path: join(process.cwd(), 'public', 'fonts', 'Arsenal-Regular.ttf')
				},
				{
					weight: '700',
					preload: true,
					style: 'normal',
					path: join(process.cwd(), 'public', 'fonts', 'Arsenal-Bold.ttf')
				}
			]
		}
	]}
/>
