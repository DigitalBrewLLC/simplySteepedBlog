---
import ListCategories from 'src/components/BlogTemplates/ListCategories.astro'
import TitlePage from 'src/components/BlogTemplates/TitlePage.astro'
import ListPosts from 'src/components/ListPosts.astro'
import BaseLayout from 'src/layouts/BaseLayout.astro'
import { getPosts } from 'src/utils/post'

const MAX_POSTS = 6 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)
---

<BaseLayout>
	<TitlePage title='Latest Posts' />
	<ListCategories />
	<div>
		<ListPosts FirstBig={true} posts={posts} />
	</div>
</BaseLayout>

<script>
	import { animate } from 'motion'
	const showAnimations = localStorage.getItem('animations') === 'true'

	if (showAnimations) {
		animate(
			'.title',
			{ y: [80, 0], opacity: [0, 1] },
			{
				duration: 2.5,
				opacity: { duration: 3 },

				offset: [0, 0.55, 0.75]
			}
		)
	}
</script>
